<div
  id="cancel-modal"
  x-show="cancelOpen"
  x-data="{ cancelReason: '' }"
  x-transition
  :class="{'flex': cancelOpen, 'hidden': !cancelOpen}"
  class="bg-black/75 h-screen hidden justify-center items-center w-full overflow-hidden top-0 absolute"
>
  <div class="bg-white px-4 py-4 rounded-2xl w-[650px]">
    <div class="flex justify-between items-center pb-2">
      <div class="flex gap-x-2">
        <img src="/images/icons/message.svg" alt="message icon" />
        <span>Cancel request</span>
      </div>
      <button @click="cancelOpen = false" class="cursor-pointer">
        <img src="/images/icons/close-icon.svg" alt="close icon" />
      </button>
    </div>
    <div class="h-px w-full bg-[#9C9C9C]"></div>
    <div class="text-center flex flex-col justify-center">
      <h3 class="text-[26px] font-semibold pb-4 pt-4">
        Why do you want to cancel?
      </h3>
      <p class="max-w-[500px] mx-auto text-[#4A4A4A] font-light text-[14px]">
        Your feedback helps us improve our service and ensure a better
        experience for you.
      </p>
      <img
        class="w-[400px] mx-auto"
        src="/images/icons/person-with-note.svg"
        alt="person with note"
      />
      <textarea
        x-model="cancelReason"
        class="h-30 w-[90%] mx-auto rounded-[8px] placeholder:font-thin placeholder:text-sm"
        name="cancelReason"
        id="cancelReason"
        placeholder="Please describe the reason for your cancellationâ€¦"
      ></textarea>
      <!-- error message box ended -->
      <div
        id="error-box"
        class="p-4 w-[90%] mx-auto mb-4 mt-2 text-sm border border-red-700 text-red-800 rounded-lg bg-red-50 dark:text-red-400 hidden"
      ></div>
      <!--  error box ended -->
      <button
        id="cancelSubmit"
        :disabled="cancelReason.trim() == ''"
        :class="cancelReason.trim() == '' ? 'bg-gray-400 cursor-not-allowed' : 'cursor-pointer'"
        class="bg-[#3A4980] w-[410px] h-[56px] mx-auto mt-2 text-white font-medium rounded-[10px]"
      >
        Submit Now
      </button>
    </div>
  </div>
</div>
<script type="module" src="/javascript/ajax/pages/userOrders.js"></script>
