<nav
  class="fixed top-0 z-50 flex w-full items-center justify-between bg-white px-4 py-3 shadow-md sm:px-6 md:px-8"
  x-data="{ isMenuOpen: false }"
  @keydown.escape="isMenuOpen = false"
>
  <!-- Logo -->
  <a href="/" class="flex items-center space-x-2">
    <img src="/images/icons/logo.svg" alt="ComfiNest Logo" class="h-6 sm:h-8" />
    <span class="text-xl font-bold sm:text-2xl">ComfiNest</span>
  </a>

  <!-- Hamburger Menu Button (Visible on Mobile) -->
  <button
    class="md:hidden flex items-center p-2 text-gray-600 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md"
    @click="isMenuOpen = !isMenuOpen"
    aria-controls="mobile-menu"
    :aria-expanded="isMenuOpen"
    aria-label="Toggle navigation menu"
  >
    <svg
      class="h-6 w-6"
      :class="{ 'hidden': isMenuOpen, 'block': !isMenuOpen }"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      />
    </svg>
    <svg
      class="h-6 w-6"
      :class="{ 'block': isMenuOpen, 'hidden': !isMenuOpen }"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"
      />
    </svg>
  </button>

  <!-- Navigation Links (Desktop) -->
  <div class="hidden md:flex md:items-center">
    <%- include("../molecules/navLinks.ejs") %>
  </div>

  <!-- Icons (Cart and Profile) -->
  <div class="flex items-center space-x-4 sm:space-x-6">
    <a href="/cart">
      <img
        src="/images/icons/cart.svg"
        alt="Cart icon"
        class="h-6 w-6 sm:h-8 sm:w-8"
      />
    </a>
    <a href="/account/my-details">
      <img
        src="/images/icons/profile.svg"
        alt="Profile icon"
        class="h-8 w-8 sm:h-10 sm:w-10"
      />
    </a>
  </div>

  <!-- Mobile Menu (Shown when hamburger is clicked) -->
  <div
    class="absolute top-full left-0 w-full bg-white shadow-md md:hidden"
    x-show="isMenuOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 transform -translate-y-2"
    x-transition:enter-end="opacity-100 transform translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 transform translate-y-0"
    x-transition:leave-end="opacity-0 transform -translate-y-2"
    id="mobile-menu"
    @click.away="isMenuOpen = false"
  >
    <div class="px-4 py-4"><%- include("../molecules/navLinks.ejs") %></div>
  </div>
</nav>
