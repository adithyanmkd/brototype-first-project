<div class="h-full items-center justify-evenly md:flex md:flex-row-reverse">
  <!-- heading block and hero image -->
  <div class="pb-16 md:pb-0">
    <!-- auth img -->
    <!-- auth image passing -->
    <%- include("../../partials/atoms/AuthImage.ejs", authData.authImage) %>
      <!-- auth heading block -->
      <!-- auth img ended -->
  </div>
  <!-- heading block and hero image ended -->

  <!-- Change password form started -->
  <form class="w-96" id="change-password-form" action="/auth/change-password" method="post"
    enctype="application/x-www-form-urlencoded">
    <h2 class="text-[44px] font-bold">Change Password</h2>
    <p class="pb-16 text-sm text-[#1C1C1C]">Enter a new password to reset your account access.</p>
    <ul class="space-y-6">
      <% authData.changePassinputFields.forEach((field)=> { %>
        <%- include("../../partials/atoms/InputField", {...field}) %>
          <% }) %>

            <!-- success box started -->
            <li id="success-box" class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 hidden">
            </li>
            <!-- success box ended  -->

            <!-- error box started -->
            <li id="error-box" class="p-4 mb-4 hidden text-sm text-red-800 rounded-lg bg-red-50 dark:text-red-400">
            </li>
            <!-- error box ended -->
            <li class="pt-4">
              <button class="w-full rounded-xl bg-[#1A1A1A] py-4 text-white hover:cursor-pointer hover:bg-black"
                type="submit">
                Update Password
              </button>
            </li>

            <p class="text-center">
              Go back to
              <span><a class="pl-1 text-[#0F3DDE]" href="/auth/login">Sign In</a></span>
            </p>
    </ul>
  </form>
  <!-- Change password form ended -->
</div>