<div class="flex">
  <div><%- include("../../partials/organisms/profileSidebar.ejs") %></div>
  <div class="mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Referral Program</h2>

    <!-- Success Message -->
    <% if (successMessage) { %>
      <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50">
        <%= successMessage %>
      </div>
    <% } %>

    <!-- Error Message -->
    <% if (errorMessage) { %>
      <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50">
        <%= errorMessage %>
      </div>
    <% } %>

    <div class="mb-4">
      <h3 class="text-lg font-semibold text-gray-700">Your Referral Code</h3>
      <p class="text-blue-600 text-lg font-bold"><%= referralCode %></p>
    </div>

    <div class="mb-4">
      <h3 class="text-lg font-semibold text-gray-700">Your Referral Link</h3>
      <p class="text-blue-600 text-lg font-bold break-all">
        <a href="<%= referralLink %>" target="_blank"><%= referralLink %></a>
      </p>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-semibold text-gray-700">Apply a Referral Code</h3>
      <form action="/account/referral/apply" method="POST" class="space-y-4">
        <div>
          <label
            for="referralCode"
            class="block text-sm font-medium text-gray-700"
            >Referral Code</label
          >
          <input
            type="text"
            id="referralCode"
            name="referralCode"
            placeholder="Enter referral code"
            class="w-full px-4 py-2 border rounded-lg"
            required
          />
        </div>
        <button
          type="submit"
          class="px-6 py-2 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600"
        >
          Apply Referral Code
        </button>
      </form>
    </div>

    <div>
      <h3 class="text-lg font-semibold text-gray-700">How It Works</h3>
      <ul class="list-disc pl-5 text-gray-600">
        <li>Share your referral link or code with your friends.</li>
        <li>
          When they register using your referral code, both of you will receive
          rewards.
        </li>
        <li>Rewards will be added to your wallet balance.</li>
      </ul>
    </div>
  </div>
</div>
