<div class="flex pb-20 space-x-40">
    <%- include("../../partials/organisms/ProfileSidebar.ejs", {menus}) %>
        <div class="w-auto flex items-center justify-center">
            <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
                <div>
                    <h2 class="text-3xl font-bold text-gray-900 text-center mb-2">
                        Change Password
                    </h2>
                    <p class="text-center text-gray-600 text-sm">
                        Please enter your current password and choose a new password
                    </p>
                </div>

                <form id="passwordForm" class="space-y-6" action="/account/change-password" method="post">
                    <!-- error message box started -->
                    <div id="error-box"
                        class="p-4 mb-4 text-sm text-red-800 hidden rounded-lg  bg-red-50 dark:text-red-400">
                    </div>
                    <!-- error message box ended -->
                    <!-- success box started -->
                    <div id="success-box" class="p-4  mb-4 text-sm text-green-800 rounded-lg bg-green-50 hidden">
                    </div>
                    <!-- success box ended -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Current Password
                        </label>
                        <div class="relative">
                            <input type="password" id="currentPassword" placeholder="Enter current password"
                                class="w-full pl-4 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3"
                                onclick="togglePassword('currentPassword')">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            New Password
                        </label>
                        <div class="relative">
                            <input type="password" id="newPassword" placeholder="Enter new password"
                                class="w-full pl-4 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3"
                                onclick="togglePassword('newPassword')">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Confirm New Password
                        </label>
                        <div class="relative">
                            <input type="password" id="confirmPassword" placeholder="Confirm new password"
                                class="w-full pl-4 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3"
                                onclick="togglePassword('confirmPassword')">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h3 class="text-sm font-medium text-gray-700 mb-3">
                            Password Requirements
                        </h3>
                        <ul class="space-y-2" id="requirements">
                            <li class="flex items-center text-sm" data-requirement="length">
                                <svg class="h-4 w-4 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-red-700">At least 8 characters</span>
                            </li>
                            <li class="flex items-center text-sm" data-requirement="uppercase">
                                <svg class="h-4 w-4 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-red-700">At least 1 uppercase letter</span>
                            </li>
                            <li class="flex items-center text-sm" data-requirement="lowercase">
                                <svg class="h-4 w-4 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-red-700">At least 1 lowercase letter</span>
                            </li>
                            <li class="flex items-center text-sm" data-requirement="number">
                                <svg class="h-4 w-4 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-red-700">At least 1 number</span>
                            </li>
                            <li class="flex items-center text-sm" data-requirement="different">
                                <svg class="h-4 w-4 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-red-700">New password must be different</span>
                            </li>
                            <li class="flex items-center text-sm" data-requirement="match">
                                <svg class="h-4 w-4 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-red-700">Passwords match</span>
                            </li>
                        </ul>
                    </div>

                    <button type="submit" id="submitButton" disabled
                        class="w-full py-3 px-4 rounded-lg text-white font-medium transition-colors bg-gray-400 cursor-not-allowed">
                        Save New Password
                    </button>
                </form>
            </div>
        </div>
</div>

<script src="/javascript/ajax/profile/changePassword.js"></script>