<div
  x-data="{showTopupModal: false, amount: ''}"
  class="flex w-full space-x-30 pb-20"
>
  <%- include("../../partials/organisms/profileSidebar.ejs") %>
  <div class="max-w-4xl w-full p-6">
    <!-- Balance Section -->
    <div class="mb-12">
      <h1 class="text-3xl font-bold text-gray-900">
        Hello <span class="capitalize"><%= user.name %></span>
      </h1>
      <p class="text-gray-500 mt-1">Your available balance</p>
      <p class="text-4xl font-bold mt-4">â‚¹<%= wallet.balance %></p>
    </div>

    <!-- Actions -->
    <div class="flex gap-4 mb-12">
      <button
        @click="showTopupModal = true"
        class="flex hover:cursor-pointer items-center gap-2 bg-gray-800 text-white px-6 py-3 rounded-lg"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
          ></path>
        </svg>
        Top Up
      </button>
      <a
        href="/account/wallet/transactions"
        class="flex hover:cursor-pointer items-center gap-2 bg-gray-800 text-white px-6 py-3 rounded-lg"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        History
      </a>
    </div>

    <!-- overflow-auto h-[600px] -->
    <!-- Recent Transactions -->
    <div class="">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Transactions</h2>
      <div class="space-y-6">
        <!-- Transaction Item -->
        <div
          x-data="{ transactions : <%= JSON.stringify(transactions) %>}"
          class="space-y-4"
        >
          <template x-for="txn in transactions">
            <div
              class="flex hover:cursor-pointer hover:bg-gray-100 border border-gray-300 items-center justify-between bg-white p-4 rounded-lg shadow"
            >
              <div class="space-y-2">
                <h4 class="font-semibold">
                  Transaction ID:
                  <span class="font-normal" x-text="txn.transactionId"></span>
                </h4>
                <p class="font-medium">
                  Note:
                  <span
                    x-text="`${txn.transactionNote}`"
                    class="font-normal"
                  ></span>
                </p>
                <p
                  class="text-sm text-gray-500"
                  x-text="new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'short', day: 'numeric' }).format(new Date(txn.createdAt)) 
                    + ' â€¢ ' + 
                    new Intl.DateTimeFormat('en-US', { hour: 'numeric', minute: 'numeric', hour12: true }).format(new Date(txn.createdAt))"
                ></p>
                <span
                  x-text="txn.type"
                  :class="{'bg-red-100 text-red-600' : txn.type === 'debit',
                              'bg-green-100 text-green-600': txn.type === 'credit'}"
                  class="text-xs font-medium px-2 py-1 rounded-full"
                ></span>
              </div>
              <p
                :class="{'text-red-600' : txn.type === 'debit',
                         'text-green-600': txn.type === 'credit'}"
                class="font-semibold"
              >
                â‚¹
                <span x-text="txn.amount"> </span>
              </p>
            </div>
          </template>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div
      x-show="showTopupModal"
      x-cloak
      x-transition
      class="fixed flex inset-0 z-50 bg-black/60 items-center justify-center"
    >
      <div
        @click.away="showTopupModal = false"
        class="bg-white rounded-2xl shadow-2xl w-full max-w-sm p-6 space-y-5 transition-all transform scale-95"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-90"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-90"
      >
        <h2 class="text-xl font-semibold text-gray-800">ðŸ’° Top Up Wallet</h2>

        <div class="space-y-2">
          <label class="text-sm text-gray-600 block">Amount (INR)</label>
          <input
            type="number"
            x-model="amount"
            placeholder="Enter amount"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none"
          />
        </div>

        <div class="flex justify-end gap-3 pt-4">
          <button
            @click="showTopupModal = false"
            class="px-4 py-2 text-sm hover:cursor-pointer text-gray-600 hover:text-gray-800"
          >
            Cancel
          </button>
          <button
            @click="topupWallet(amount)"
            class="px-5 py-2 text-sm hover:cursor-pointer font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 transition duration-200"
          >
            Proceed
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ajax script -->
<script type="module" src="/javascript/ajax/pages/wallet.js"></script>
