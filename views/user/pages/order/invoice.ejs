            fill="#157BC0"
          />
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M11.9459 11.1886C11.9459 11.6069 11.6067 11.9461 11.1884 11.9461H0.735277C0.316927 11.9461 -0.0246926 11.6059 0.00140214 11.1884C0.376577 5.18205 5.18196 0.376583 11.1882 0.00140216C11.6057 -0.0246931 11.9459 0.316932 11.9459 0.73529V11.1886Z"
