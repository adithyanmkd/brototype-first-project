<div class="max-w-4xl mx-auto p-6">
  <!-- Back Button -->
  <button
    onclick="history.back()"
    class="mb-6 flex items-center text-gray-600 hover:text-gray-900"
  >
    <svg
      class="w-5 h-5 mr-2"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 19l-7-7m0 0l7-7m-7 7h18"
      ></path>
    </svg>
    Back
  </button>

  <!-- Progress Steps -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center space-x-4">
      <div
        class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white"
      >
        ✓
      </div>
      <span class="text-green-500">Cart</span>
    </div>
    <div class="flex items-center space-x-4">
      <div
        class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white"
      >
        ✓
      </div>
      <span class="text-green-500">Add address</span>
    </div>
    <div class="flex items-center space-x-4">
      <div
        class="w-8 h-8 rounded-full bg-black flex items-center justify-center text-white"
      >
        3
      </div>
      <span class="font-medium">Payment</span>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-8">
    <!-- Order Summary -->
    <div class="bg-white p-6 rounded-lg shadow-sm">
      <div class="flex items-center space-x-2 mb-6">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
          ></path>
        </svg>
        <h2 class="text-lg font-medium">
          Order Summary (<%= totalItems %> items)
        </h2>
      </div>

      <div
        x-data="{
        totalSellingPrice: <%= totalSellingPrice %>,
        totalOriginalPrice: <%= totalOriginalPrice %>,
        couponDiscount: <%= Number(JSON.parse(couponDiscount)) %> || 0,
      }"
        class="space-y-4"
      >
        <div class="flex justify-between">
          <span>Price</span>
          <span x-text="`₹${totalOriginalPrice}`"></span>
        </div>
        <div class="flex justify-between text-green-500">
          <span>Discount</span>
          <span x-text="`-₹${totalOriginalPrice - totalSellingPrice}`"></span>
        </div>
        <div>
          <template x-if="couponDiscount > 0">
            <div class="flex justify-between text-green-600">
              <span>Coupon Discount</span>
              <span
                id="couponDiscountValue"
                :data-coupon-discount="couponDiscount"
                x-text="'-₹' + couponDiscount"
              ></span>
            </div>
          </template>
        </div>
        <div class="border-t pt-4 flex justify-between font-medium">
          <span>Total Amount</span>
          <span x-text="`₹${totalSellingPrice - couponDiscount}`"></span>
        </div>
      </div>
    </div>
    <!-- Payment Methods -->
    <div class="space-y-4">
      <h2 class="text-lg font-medium mb-4">Payment Methods</h2>

      <!-- Wallet Payment (Disabled) -->
      <!-- 
      <button
        disabled
        class="w-full p-4 bg-gray-100 rounded-lg text-left cursor-not-allowed"
      >
        <div class="flex items-center justify-between">
          <span class="font-medium">Wallet</span>
          <span class="text-sm text-gray-500">Balance: ₹0</span>
        </div>
      </button> -->

      <!-- Cash on Delivery (Enabled) -->
      <!-- <button
        class="w-full p-4 bg-black text-white rounded-lg text-left hover:bg-gray-900 transition"
      >
        <div class="flex items-center justify-between">
          <span class="font-medium">Cash On Delivery</span>
        </div>
      </button> -->

      <!-- payment methods started -->

      <div
        class="w-full space-y-4"
        x-data="{ paymentMethods: <%= JSON.stringify(paymentMethods) %>, 
                  selectedMethod: null
                }"
      >
        <template x-for="method in paymentMethods">
          <div class="flex items-center justify-between">
            <input
              type="radio"
              name="paymentMethod"
              :id="method.value"
              :value="method.value"
              class="hidden"
            />
            <template x-if="method.value !== 'wallet'">
              <label
                @click="selectedMethod = method.value"
                x-text="method.name"
                :for="method.value"
                :class="selectedMethod === method.value 
                        ? 'text-white bg-black font-medium hover:bg-gray-900'
                        : 'bg-gray-100 font-medium'"
                class="p-4 w-full rounded-lg text-left transition cursor-pointer"
              ></label>
            </template>
            <template x-if="method.value === 'wallet'">
              <label
                @click="selectedMethod = method.value"
                :for="method.value"
                :class="selectedMethod === method.value 
                ? 'text-white bg-black font-medium hover:bg-gray-900'
                : 'bg-gray-100 font-medium'"
                class="p-4 w-full rounded-lg text-left transition cursor-pointer"
              >
                <div class="flex items-center justify-between">
                  <span class="font-medium" x-text="method.name"></span>
                  <span
                    class="text-sm text-gray-500"
                    x-text="'Balance: ₹' + method.balance"
                  ></span>
                </div>
              </label>
            </template>
          </div>
        </template>
      </div>
      <!-- ====================error box started==================== -->
      <div
        id="error-box"
        class="hidden p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:text-red-400"
      ></div>
      <!-- ====================error box ended==================== -->
      <a
        id="pay-btn"
        class="w-full block text-center cursor-pointer py-4 bg-[#3B4784] text-white rounded-lg font-medium hover:bg-[#2C3A6E] mt-8"
      >
        Pay Via COD
      </a>
    </div>
  </div>
</div>
<script type="module" src="javascript/ajax/pages/payment.js"></script>
