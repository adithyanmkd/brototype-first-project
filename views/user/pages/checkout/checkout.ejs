<style>
  .modal {
    display: none;
    z-index: 50;
  }

  .modal.show {
    display: block;
  }
</style>

<div class="max-w-4xl mx-auto p-6">
  <!-- Back Button -->
  <button
    onclick="history.back()"
    class="mb-6 flex items-center text-gray-600 hover:text-gray-900"
  >
    <svg
      class="w-5 h-5 mr-2"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 19l-7-7m0 0l7-7m-7 7h18"
      ></path>
    </svg>
    Back
  </button>

  <!-- Progress Steps -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center space-x-4">
      <div
        class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white"
      >
        ✓
      </div>
      <span class="text-green-500">Cart</span>
    </div>
    <div class="flex items-center space-x-4">
      <div
        class="w-8 h-8 rounded-full bg-black flex items-center justify-center text-white"
      >
        2
      </div>
      <span class="font-medium">Add address</span>
    </div>
    <div class="flex items-center space-x-4">
      <div
        class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center"
      >
        3
      </div>
      <span class="text-gray-500">Payment</span>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-8">
    <!-- Order Summary -->
    <div
     class="bg-white p-6 rounded-lg shadow-sm">
      <div class="flex items-center space-x-2 mb-6">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
          ></path>
        </svg>
        <h2 class="text-lg font-medium">Order Summary (<%= totalItems %> items)</h2>
      </div>

      <div x-data="{
        totalSellingPrice: <%= totalSellingPrice %>,
        totalOriginalPrice: <%= totalOriginalPrice %>,
        couponDiscount: <%= Number(JSON.parse(couponDiscount)) %>,
      }"
       class="space-y-4">
        <div class="flex justify-between">
          <span>Price</span>
          <span x-text="`₹${totalOriginalPrice}`"></span>
        </div>
        <div class="flex justify-between text-green-500">
          <span>Discount</span>
          <span x-text="`-${totalOriginalPrice - totalSellingPrice}`"></span>
        </div>
        <div>
          <template x-if="couponDiscount > 0 %>">
            <div class="flex justify-between text-green-600">
              <span>Coupon Discount</span>
              <span id="couponDiscountValue" :data-coupon-discount="couponDiscount" x-text="'-₹' + couponDiscount"></span>
            </div>
          </template>
        </div>
        <div class="border-t pt-4 flex justify-between font-medium">
          <span>Total Amount</span>
          <span x-text="`₹${totalSellingPrice}`"></span>
        </div>
      </div>
    </div>

    <!-- Address Section --> 
  <form action="/checkout" id="checkout-form" method="post">
    <div class="flex">
      <div class="mx-auto w-full max-w-6xl pb-20">
        <h1 class="mb-8 text-3xl font-bold">MY ADDRESSES</h1>
        <!-- Address Cards Container -->
        <div class="grid max-h-96 w-full overflow-y-auto grid-cols-1 gap-6">
          <!-- Add New Address Card -->
          <div
            onclick="showAddModal()"
            class="flex cursor-pointer items-center justify-center rounded-lg border-2 border-dashed border-gray-300 px-2 py-1 transition-colors hover:border-gray-400"
          >
            <div class="text-center">
              <span class="mb-2 block text-4xl text-gray-400">+</span>
              <span class="text-gray-600">Add new address</span>
            </div>
          </div>

            <div x-data="{ selectedAddress: '', showError: false }">
              <!-- Error Message -->
              <p x-show="showError" class="text-red-500 mt-2">⚠️ Please select a delivery address.</p>
              <% addresses.forEach((address, index) => { %>
                <!-- Address Card -->
                <div class="overflow-hidden rounded-lg bg-white shadow-md">
                  <div class="bg-black p-4 text-white">
                    <span><%= address.name %></span>
                  </div>
                  <div class="p-4">
                    <p class="mb-4 text-gray-600">
                      <%= address.phone %>, <%= address.address %>,<br />
                      <%= address.locality %>,<br />
                      <%= address.district %>, <%= address.state.toUpperCase() %>, <%= address.pincode %>
                    </p>
                    <div class="flex gap-3">
                      <a
                        href="/account/address/edit/<%= address._id %>"
                        class="cursor-pointer rounded bg-yellow-400 px-6 py-2 font-medium transition-colors hover:bg-yellow-500"
                      >
                        Edit
                      </a>
                        <button
                          onclick="openDeleteModal('<%= address._id %>', event)"
                          class="cursor-pointer rounded border border-gray-300 px-6 py-2 font-medium transition-colors hover:bg-gray-50"
                        >
                          Remove
                        </button>
                    </div>
                    <div class="mt-4 w-full">
                      <!-- Radio Button (Hidden) -->
                      <input type="radio" 
                      id="<%= address._id %>" 
                      name="isAddress" 
                      x-model="selectedAddress" 
                      value="<%= address._id %>"
                      class="hidden ">

                    <!-- Label (Button) -->
                    <label for="<%= address._id %>"
                          class="cursor-pointer rounded border border-gray-300 px-6 py-2 font-medium transition-colors"
                          :class="selectedAddress === '<%= address._id %>' ? 'bg-black text-white' : 'bg-white text-black'">
                    Deliver here
                    </label>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
          <input  type="submit" class="bg-[#3A4980] font-medium text-white px-6 py-3 w-full mt-4 rounded-[10px] cursor-pointer" value="Proceed to buy" >
        </form>
      </div>
    </div>
    
    <!-- Error Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-black/75 bg-opacity-50 hidden items-center justify-center ">
      <div class="bg-white p-6 rounded-lg shadow-lg w-96">
          <p class="text-lg font-semibold text-gray-800 mb-4">
              Are you sure you want to delete this Address?
          </p>
          <div class="flex justify-end gap-3">
              <button onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">
                  Cancel
              </button>
              <form id="deleteForm">
                  <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">
                      Delete
                  </button>
              </form>
          </div>
      </div>
    </div>

    
    <!-- Add Address Modal -->
    <div id="addModal" class="modal bg-opacity-50 fixed inset-0 bg-black/75 px-10">
      <div class="mx-auto mt-20 w-full max-w-lg rounded-lg bg-white">
        <div class="flex items-center justify-between border-b p-4">
          <h2 class="text-xl font-semibold">Add Address</h2>
          <button
            type="button"
            class="text-gray-500 hover:text-gray-700"
            onclick="closeAddModal()"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              ></path>
            </svg>
          </button>
        </div>
        <div class="p-6">
          <form
            id="add-address-form"
            class="space-y-4"
            onsubmit="event.preventDefault();"
          >
            <!-- error message box started -->
            <div
              id="error-box"
              class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:text-red-400 hidden"
            ></div>
            <!-- error message box ended -->
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Full Name<span class="text-red-500">*</span></label
              >
              <input
                type="text"
                name="fullname"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Email<span class="text-red-500">*</span></label
              >
              <input
                type="email"
                name="email"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Mobile No.<span class="text-red-500">*</span></label
              >
              <input
                type="tel"
                name="phoneNumber"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Address (House No, Building, Street Area)<span class="text-red-500"
                  >*</span
                ></label
              >
              <input
                type="text"
                name="address"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
              />
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >Locality/Town</label
                >
                <input
                  type="text"
                  name="locality"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >Pincode<span class="text-red-500">*</span></label
                >
                <input
                  type="text"
                  name="pincode"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
                />
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >City/District<span class="text-red-500">*</span></label
                >
                <input
                  type="text"
                  name="district"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >State<span class="text-red-500">*</span></label
                >
                <input
                  type="text"
                  name="state"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200"
                />
              </div>
            </div>
            <div class="flex items-center">
              <input
                type="checkbox"
                name="isDefault"
                class="rounded text-yellow-500 focus:ring-yellow-200"
              />
              <label class="ml-2 text-sm text-gray-700"
                >Make this default address</label
              >
            </div>
            <button
              type="submit"
              class="w-full rounded-md bg-yellow-400 py-2 font-medium text-black transition-colors hover:bg-yellow-500"
            >
              Save Address
            </button>
          </form>
        </div>
      </div>
    </div>

    
  </div>
</div>
<script src="/javascript/ajax/profile/address.js"></script>
<script src="/javascript/ajax/checkout/checkout.js"></script>
