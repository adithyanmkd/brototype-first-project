<div class="min-h-screen max-w-7xl mx-auto px-4 py-8">
  <!-- Back Button -->
  <div class="mb-6">
    <a
      onclick="history.back()"
      class="inline-flex items-center cursor-pointer text-gray-600 hover:text-gray-900"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m12 19-7-7 7-7" />
        <path d="M19 12H5" />
      </svg>
      <span class="ml-2">Back to Products</span>
    </a>
  </div>

  <!-- Progress Steps -->
  <div class="mb-8">
    <div class="flex items-center justify-center space-x-8">
      <div class="flex items-center">
        <div
          class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center"
        >
          1
        </div>
        <span class="ml-2 font-medium">Cart</span>
      </div>
      <div class="w-24 h-[2px] bg-gray-300"></div>
      <div class="flex items-center opacity-50">
        <div
          class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center"
        >
          2
        </div>
        <span class="ml-2">Add address</span>
      </div>
      <div class="w-24 h-[2px] bg-gray-300"></div>
      <div class="flex items-center opacity-50">
        <div
          class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center"
        >
          3
        </div>
        <span class="ml-2">Payment</span>
      </div>
    </div>
  </div>

<form
x-data="{
    couponCode: '',
    newDiscount: false,
    availableCoupons: <%= JSON.stringify(availableCoupons || []) %>,
    items: [
      <% cartItems.forEach((item, index) => { %>
        {
          id: '<%= item._doc._id %>',
          quantity: <%= item.quantity %>,
          sellingPrice: <%= item._doc.price.sellingPrice %>,
          originalPrice: <%= item._doc.price.originalPrice %>
        },
      <% }); %>
    ],
    updateQuantity(index, delta) {
      const newQty = this.items[index].quantity + delta;
      if (newQty >= 1 && newQty <= 3) {
        this.items[index].quantity = newQty;
      }
    },
    get totalSellingPrice() {
      return this.items.reduce((acc, item) => acc + (item.quantity * item.sellingPrice), 0);
    },
    get totalOriginalPrice() {
      return this.items.reduce((acc, item) => acc + (item.quantity * item.originalPrice), 0);
    },
    get matchedCoupon() {
      return this.availableCoupons.find(c => c.code === this.couponCode);
    },
    get couponDiscount() {
      let couponDiscount = <%= Number(JSON.parse(couponDiscount)) %>
      if(couponDiscount){
        return couponDiscount
      }
      if (!this.matchedCoupon) return 0;
      if (!this.isCouponEligible(this.matchedCoupon)) {
        this.couponCode = '';
        return 0;
      }

      const baseDiscount = this.matchedCoupon.discountType === 'percentage'
        ? Math.round((this.totalSellingPrice * this.matchedCoupon.discountValue) / 100)
        : this.matchedCoupon.discountValue;

      // Apply maxDiscountAmount if defined
      const maxCap = this.matchedCoupon.maxDiscountAmount ?? Infinity;
      return Math.min(baseDiscount, maxCap, this.totalSellingPrice);
    },
    get finalTotal() {
      return this.totalSellingPrice - this.couponDiscount;
    },
    isCouponEligible(coupon) {
      return this.totalSellingPrice >= coupon.minOrderAmount;
    }
  }"
  action="/cart" id="cartForm" method="post">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Cart Items -->
    <div class="lg:col-span-2 space-y-4">
     <% cartItems.forEach((item, index) => { %>
      <input class="cart-item hidden"  name="items[<%= index %>][productId]" data-product-id="<%= item._doc._id %>" value="<%= item._doc._id %>">
        <!-- Items -->
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="flex gap-6">
            <img
              src="<%= item._doc.images.cardImage.path %>"
              alt="<%= item._doc.images.cardImage.alt %>"
              class="w-24 h-24 object-cover rounded-md"
            />
            <div class="flex-1">
              <div class="flex justify-between">
                <h3 class="text-lg font-medium"><%= item._doc.productName %></h3>
                <button class="text-gray-400 hover:text-red-500" onclick="deleteItem('<%= item._doc._id %>', event)">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M3 6h18" />
                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
                  </svg>
                </button>
              </div>
              <p class="text-sm text-gray-500"><%= item._doc.category.name %></p>
              <div class="mt-4 flex items-center justify-between">
                <div class="flex items-center space-x-2">
                 <!-- Quantity Selector -->
                <div>
                  <!-- product prices started -->
                   <input name="items[<%= index %>][sellingPrice]" hidden type="text" value="<%= item._doc.price.sellingPrice %>">
                   <input name="items[<%= index %>][originalPrice]" hidden type="text" value="<%= item._doc.price.originalPrice %>">
                  <!-- product prices ended -->
                  <label class="block text-gray-700 font-semibold mb-2">Quantity:</label>
                  <div class="flex items-center space-x-2">
                      <button type="button" @click="updateQuantity(<%= index %>, -1)"
                          class="px-3 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400">-</button>
                      <input name="items[<%= index %>][quantity]" disabled type="text" id="<%= item._doc._id %>" :value="items[<%= index %>].quantity"
                          data-quantity="<%= item.quantity %>"
                          class="w-12 cart-item text-center border border-gray-300 rounded-lg">
                      <button type="button" @click="updateQuantity(<%= index %>, 1)"
                          class="px-3 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400">+</button>
                  </div>
              </div>
                </div>
                <div class="text-right">
                  <div name="items[<%= index %>][totalSellingPrice]" class="text-lg font-medium" x-text="'₹' + (items[<%= index %>].quantity * items[<%= index %>].sellingPrice)"></div>
                  <div name="items[<%= index %>][totalOriginalPrice]" class="text-sm text-gray-500 line-through" x-text="'₹' + (items[<%= index %>].quantity * items[<%= index %>].originalPrice)"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
     <% }) %>
    </div>
    <!-- Order Summary -->
    <div class="lg:col-span-1">
      <div class="bg-white p-6 rounded-lg shadow-sm">
        <div class="flex items-center gap-2 mb-6">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"
            />
            <path d="m3.3 7 8.7 5 8.7-5" />
            <path d="M12 22V12" />
          </svg>
          <h2 class="text-lg font-medium">Order Summary (<span id="totalItems"><%= totalItems %></span> items)</h2>
        </div>

        <div class="space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-600">Price</span>
            <span id="grandOriginalPrice" x-text="'₹' + totalOriginalPrice"><%= totalOriginalPrice %></span>
          </div>
          <div class="flex justify-between text-green-600">
            <span>Discount</span>
            <span id="grandDiscount" x-text="'₹' + (totalOriginalPrice - totalSellingPrice)"><%= totalOriginalPrice - totalSellingPrice %></span>
          </div>
          <div>
            <template x-if="couponDiscount > 0 && newDiscount">
              <div class="flex justify-between text-green-600">
                <span>Coupon Discount</span>
                <span id="couponDiscountValue" :data-coupon-discount="couponDiscount" x-text="'-₹' + couponDiscount"></span>
              </div>
            </template>
          </div>
          <div  x-data="{couponDiscount: <%= Number(JSON.parse(couponDiscount)) %>}">
            <template x-if="<%= Number(JSON.parse(couponDiscount)) > 0 %> && !newDiscount">
              <div class="flex justify-between text-green-600">
                <span>Coupon Discount</span>
                <span id="couponDiscountValue" :data-coupon-discount="couponDiscount" x-text="'-₹' + couponDiscount"></span>
              </div>
            </template>
          </div>
          <div class="border-t pt-4 flex justify-between font-medium">
            <span>Total Amount</span>
            <span x-text="'₹' + finalTotal" id="grandTotal"><%= totalSellingPrice %></span>
          </div>
        </div>
        <!-- ====================error box started==================== -->
        <div id="error-box" class="mt-4 p-4 mb-4 hidden text-sm  text-red-800 rounded-lg bg-red-50 dark:text-red-400">
        </div>
        <!-- ====================error box ended==================== -->
        <button
          type="submit"
          class="w-full mt-6 bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition-colors"
        >
          Checkout
        </button>

        <!-- Coupon Section -->
        <div class="mt-6">
          <h3 class="font-medium mb-3 flex items-center gap-2">Apply Coupon</h3>
          <div class="flex gap-2">
            <input
              type="text"
              disabled
              name="coupon"
              value="couponCode"
              x-model="couponCode"
              placeholder="Select coupon from below"

              class="flex-1 px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <!-- Available Coupons -->
          <div x-data="{ showCouponList: false }">
            <button
              type="button"
              class="mt-4 text-sm text-blue-600 hover:underline"
              @click="showCouponList = !showCouponList"
            >
              <span x-show="!showCouponList">Show available coupons</span>
              <span x-show="showCouponList">Hide available coupons</span>
            </button>
            <ul x-show="showCouponList" class="mt-3 space-y-2 text-sm">
              <% availableCoupons.forEach(coupon => { %>
                <template x-if="isCouponEligible(<%= JSON.stringify(coupon) %>)">
                  <li class="bg-gray-50 border rounded-md p-3 flex justify-between items-center">
                    <div>
                      <span class="font-semibold text-purple-700"><%= coupon.code %></span>
                      <span class="ml-2 text-gray-500 text-xs">
                        <%= coupon.discountType === 'percentage' ? coupon.discountValue + '% Off' : '₹' + coupon.discountValue + ' Off' %>
                      </span>
                      <p class="text-xs text-gray-400">Valid till <%= new Date(coupon.endDate).toLocaleDateString('en-IN') %></p>
                    </div>
                    <button
                      type="button"
                      class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded hover:bg-blue-200"
                      @click="couponCode = '<%= coupon.code %>', newDiscount = true"
                    >
                      Apply
                    </button>
                  </li>
                </template>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
</div>

<script src="/javascript/ajax/cart/cart.js"></script>