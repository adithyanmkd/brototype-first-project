<div
  class="w-full max-w-3xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden transition-all duration-300 m-2 sm:m-4"
>
  <!-- Header -->
  <div
    class="bg-gradient-to-r from-indigo-500 to-purple-500 py-6 px-6 sm:px-8 flex justify-between items-center"
  >
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-white tracking-tight">
        Create New Coupon
      </h1>
      <p class="text-indigo-100 mt-1 text-sm sm:text-base opacity-90">
        Fill in the details to generate a discount coupon
      </p>
    </div>
    <!-- Close Button -->
    <button
      @click="couponAdd.open = false"
      type="button"
      class="text-white bg-indigo-600/50 hover:bg-indigo-600/70 rounded-full p-2 sm:p-3 transition-colors duration-200"
      aria-label="Close modal"
    >
      <svg
        class="w-5 h-5 sm:w-6 sm:h-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>
  </div>

  <form
    id="couponAddForm"
    action="/coupons"
    method="POST"
    class="p-6 sm:p-8 bg-white"
  >
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 sm:gap-8">
      <!-- Coupon Code -->
      <div class="col-span-1">
        <label
          for="code"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-tag text-indigo-600 mr-2"></i> Coupon Code
          <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <input
            type="text"
            id="code"
            name="code"
            required
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
            placeholder="SUMMER2025"
          />
        </div>
        <p class="mt-1 text-xs sm:text-sm text-gray-600">
          Code will be converted to uppercase automatically
        </p>
      </div>

      <!-- Discount Type -->
      <div class="col-span-1">
        <label
          for="discountType"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-percentage text-indigo-600 mr-2"></i> Discount Type
          <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <select
            id="discountType"
            name="discountType"
            required
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 appearance-none focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
          >
            <option value="">Select discount type</option>
            <option value="percentage">Percentage (%)</option>
            <option value="fixed">Fixed Amount (â‚¹)</option>
          </select>
        </div>
      </div>

      <!-- Discount Value -->
      <div class="col-span-1">
        <label
          for="discountValue"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-coins text-indigo-600 mr-2"></i> Discount Value
          <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <input
            type="number"
            id="discountValue"
            name="discountValue"
            required
            min="0"
            step="0.01"
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
            placeholder="0.00"
          />
        </div>
      </div>

      <!-- Min Order Amount -->
      <div class="col-span-1">
        <label
          for="minOrderAmount"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-shopping-cart text-indigo-600 mr-2"></i> Minimum
          Order Amount
        </label>
        <div class="relative">
          <input
            type="number"
            id="minOrderAmount"
            name="minOrderAmount"
            min="0"
            step="0.01"
            value="0"
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
            placeholder="0.00"
          />
        </div>
      </div>

      <!-- Max Discount Amount -->
      <div class="col-span-1">
        <label
          for="maxDiscountAmount"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-hand-holding-usd text-indigo-600 mr-2"></i> Maximum
          Discount
        </label>
        <div class="relative">
          <input
            type="number"
            id="maxDiscountAmount"
            name="maxDiscountAmount"
            min="0"
            step="0.01"
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
            placeholder="0.00"
          />
        </div>
        <p class="mt-1 text-xs sm:text-sm text-gray-600">
          Leave empty for no maximum
        </p>
      </div>

      <!-- Start Date -->
      <div class="col-span-1">
        <label
          for="startDate"
          class="block text Date -->
      <div class="col-span-1">
        <label
          for="startDate"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-calendar-alt text-indigo-600 mr-2"></i> Start Date
          <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <input
            type="date"
            id="startDate"
            name="start"
            required
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
          />
        </div>
      </div>

      <!-- End Date -->
      <div class="col-span-1">
        <label
          for="endDate"
          class="block text-sm sm:text-base font-semibold text-gray-800 mb-2"
        >
          <i class="fas fa-calendar-alt text-indigo-600 mr-2"></i> End Date
          <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <input
            type="date"
            id="endDate"
            name="end"
            required
            class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 text-sm sm:text-base"
          />
        </div>
      </div>

      <!-- Is Active -->
      <div class="col-span-1 flex items-center">
        <div
          class="relative inline-block w-12 sm:w-14 mr-3 sm:mr-4 align-middle select-none"
        >
          <input
            type="checkbox"
            name="isActive"
            id="isActive"
            checked
            class="checked:bg-indigo-500 outline-none focus:outline-none right-6 sm:right-7 checked:right-0 duration-200 ease-in absolute block w-6 h-6 sm:w-7 sm:h-7 rounded-full bg-white border-4 appearance-none cursor-pointer"
            style="transition: right 0.2s ease-in"
          />
          <label
            for="isActive"
            class="block overflow-hidden h-6 sm:h-7 rounded-full bg-gray-300 cursor-pointer"
            style="transition: background-color 0.2s ease-in"
          ></label>
        </div>
        <div class="text-sm sm:text-base">
          <label for="isActive" class="font-semibold text-gray-800"
            >Active</label
          >
          <p class="text-gray-600 text-xs sm:text-sm">
            Coupon is ready to be used
          </p>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="mt-6 sm:mt-8">
      <button
        type="submit"
        class="w-full bg-gradient-to-r from-indigo-500 to-purple-500 text-white py-3 sm:py-4 px-6 sm:px-8 rounded-lg font-semibold text-sm sm:text-lg shadow-md hover:from-indigo-600 hover:to-purple-600 focus:outline-none focus:ring-4 focus:ring-indigo-300 transition-all duration-300 transform hover:scale-105"
      >
        <i class="fas fa-save mr-2 sm:mr-3 text-base sm:text-lg"></i> Create
        Coupon
      </button>
    </div>
  </form>
</div>