<div class="max-w-full mt-8 w-full bg-white rounded-lg shadow-lg p-6">
  <h5 class="text-2xl font-bold text-gray-900 mb-4">Sales Report</h5>

  <!-- Filtering Options -->
  <div class="flex flex-wrap justify-between items-center mb-6">
    <div class="flex items-center">
      <label for="sales-range" class="text-sm text-gray-500 mr-2"
        >Filter by:</label
      >
      <select
        id="sales-range"
        class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 focus:ring-blue-500 focus:border-blue-500"
      >
        <option value="1d">Yesterday</option>
        <option value="1w" selected>Last 7 Days</option>
        <option value="1m">Last 30 Days</option>
        <option value="custom">Custom Range</option>
      </select>
    </div>

    <!-- Custom Date Range -->
    <div id="custom-date-range" class="hidden flex items-center space-x-4">
      <div>
        <label for="start-date" class="text-sm text-gray-500"
          >Start Date:</label
        >
        <input
          type="date"
          id="start-date"
          class="ml-2 px-3 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>
      <div>
        <label for="end-date" class="text-sm text-gray-500">End Date:</label>
        <input
          type="date"
          id="end-date"
          class="ml-2 px-3 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>
    </div>

    <!-- Download Options -->
    <div class="flex space-x-4">
      <button
        id="download-pdf"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:outline-none"
      >
        Download PDF
      </button>
      <button
        id="download-excel"
        class="px-4 py-2 bg-green-600 text-white rounded-lg text-sm hover:bg-green-700 focus:ring-2 focus:ring-green-500 focus:outline-none"
      >
        Download Excel
      </button>
    </div>
  </div>

  <!-- Sales Summary -->
  <div class="grid grid-cols-3 gap-6 mb-6">
    <div class="p-4 bg-blue-100 rounded-lg shadow">
      <p class="text-sm text-gray-500">Total Sales</p>
      <h3 id="total-sales" class="text-2xl font-semibold text-blue-900">₹0</h3>
    </div>
    <div class="p-4 bg-green-100 rounded-lg shadow">
      <p class="text-sm text-gray-500">Total Discounts</p>
      <h3 id="total-discounts" class="text-2xl font-semibold text-green-900">
        ₹0
      </h3>
    </div>
    <div class="p-4 bg-yellow-100 rounded-lg shadow">
      <p class="text-sm text-gray-500">Total Orders</p>
      <h3 id="total-orders" class="text-2xl font-semibold text-yellow-900">
        0
      </h3>
    </div>
  </div>

  <!-- Sales Details Table -->
  <div class="overflow-x-auto">
    <table
      class="w-full text-sm text-left text-gray-500 border-collapse border border-gray-200"
    >
      <thead class="text-xs text-gray-700 uppercase bg-gray-100">
        <tr>
          <th scope="col" class="px-4 py-2 border border-gray-200">Order ID</th>
          <th scope="col" class="px-4 py-2 border border-gray-200">Amount</th>
          <th scope="col" class="px-4 py-2 border border-gray-200">Discount</th>
          <th scope="col" class="px-4 py-2 border border-gray-200">Date</th>
          <th scope="col" class="px-4 py-2 border border-gray-200">
            Payment Method
          </th>
          <th scope="col" class="px-4 py-2 border border-gray-200">
            Order Status
          </th>
        </tr>
      </thead>
      <tbody id="sales-details" class="bg-white">
        <!-- Sales details will be dynamically added here -->
      </tbody>
    </table>
  </div>

  <!-- Pagination Buttons -->
  <div id="pagination" class="flex justify-center mt-4"></div>
</div>

<script type="module" src="/javascript/ajax/pages/adminSalesReport.js"></script>
