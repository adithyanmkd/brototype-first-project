<div
  x-data="{
    products: <%= JSON.stringify(products) %>,
    perPage: 5,
    page: 1,
    get totalPages() {
      return Math.ceil(this.products.length / this.perPage);
    },
    get paginatedProducts() {
      const start = (this.page - 1) * this.perPage;
      return this.products.slice(start, start + this.perPage);
    },
    goToPage(p) {
      if (p >= 1 && p <= this.totalPages) this.page = p;
    }
  }"
  class="max-w-5xl mx-auto bg-white p-6 rounded-lg shadow-lg"
>
  <!-- Search Bar & Add Product Button -->
  <div class="flex justify-between items-center py-6">
    <!-- Search Bar -->
    <form
      action="/admin/products"
      method="GET"
      class="flex items-center space-x-2"
    >
      <input
        type="text"
        name="search"
        id="search"
        class="w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500"
        placeholder="Search..."
      />
      <button
        type="submit"
        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600"
      >
        Search
      </button>
      <button
        type="button"
        id="clearSearch"
        class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600"
      >
        Clear
      </button>
    </form>

    <!-- Add Product Button -->
    <a
      href="/admin/products/add"
      class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md"
    >
      + Add Product
    </a>
  </div>

  <!-- Product Table -->
  <table class="w-full border-collapse">
    <thead>
      <tr class="bg-gray-200 text-gray-700">
        <th class="p-4 text-left">PRODUCT</th>
        <th class="p-4 text-left">CATEGORY</th>
        <th class="p-4 text-left">PRICE</th>
        <th class="p-4 text-left">QTY</th>
        <th class="p-4 text-left">ACTIONS</th>
      </tr>
    </thead>
    <tbody id="productTable">
      <template x-for="product in paginatedProducts" :key="product._id">
        <tr class="border-b hover:bg-gray-50">
          <td class="p-4 flex items-center">
            <img
              :src="product.images.cardImage.path"
              :alt="product.productName"
              class="w-12 h-12 rounded-lg mr-3"
            />
            <div>
              <p
                class="font-semibold text-gray-900"
                x-text="product.productName"
              ></p>
              <p class="text-gray-500 text-sm" x-text="product.description"></p>
            </div>
          </td>
          <td class="p-4">
            <span
              class="px-3 py-1 text-sm font-semibold rounded-lg bg-gray-100"
              x-text="product.category.name"
            ></span>
          </td>
          <td class="p-4 font-semibold text-gray-900">
            â‚¹<span x-text="product.price.sellingPrice"></span>
          </td>
          <td
            class="p-4 font-semibold text-gray-900"
            x-text="product.quantity"
          ></td>
          <td class="p-4">
            <div class="flex space-x-2">
              <a
                :href="'/admin/products/edit/' + product._id"
                class="bg-blue-100 text-blue-600 px-4 py-2 rounded-lg flex items-center shadow-md hover:bg-blue-200"
              >
                Edit
              </a>
              <button
                type="button"
                @click="openDeleteModal(product._id)"
                x-text="product.isListed ? 'Unlist' : 'List'"
                :class="{'bg-red-100 text-red-700 hover:bg-red-200 transition-colors cursor-pointer': product.isListed,
                         'bg-green-100 text-green-700 hover:bg-green-200 transition-colors cursor-pointer': !product.isListed}"
                class="px-4 py-2 rounded-lg flex items-center shadow-md"
              ></button>
            </div>
          </td>
        </tr>
      </template>
    </tbody>
  </table>

  <!-- Frontend Pagination -->
  <div class="flex justify-center space-x-2 mt-4">
    <button
      @click="goToPage(page - 1)"
      :disabled="page === 1"
      class="px-3 py-2 rounded-lg"
      :class="page === 1 ? 'bg-gray-100 text-gray-400 cursor-not-allowed' : 'bg-gray-200 hover:bg-gray-300'"
    >
      Previous
    </button>

    <template x-for="i in totalPages" :key="i">
      <button
        @click="goToPage(i)"
        class="px-3 py-2 rounded-lg"
        :class="page === i ? 'bg-blue-500 text-white' : 'bg-gray-200 hover:bg-gray-300'"
        x-text="i"
      ></button>
    </template>

    <button
      @click="goToPage(page + 1)"
      :disabled="page === totalPages"
      class="px-3 py-2 rounded-lg"
      :class="page === totalPages ? 'bg-gray-100 text-gray-400 cursor-not-allowed' : 'bg-gray-200 hover:bg-gray-300'"
    >
      Next
    </button>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div
  id="deleteModal"
  class="fixed inset-0 bg-black/75 bg-opacity-50 flex items-center justify-center hidden"
>
  <div class="bg-white p-6 rounded-lg shadow-lg w-96">
    <p class="text-lg font-semibold text-gray-800 mb-4">Are you sure?</p>
    <div class="flex justify-end space-x-3">
      <button
        onclick="closeDeleteModal()"
        class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400"
      >
        Cancel
      </button>
      <form id="deleteForm" method="POST" action="">
        <button
          type="submit"
          class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600"
        >
          Yes
        </button>
      </form>
    </div>
  </div>
</div>

<!-- JS for Modal -->
<script type="module" src="/javascript/ajax/products/listProducts.js"></script>
