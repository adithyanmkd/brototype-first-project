<form action="">
  <ul>
    <li>
      <p class="mb-4">Upload card image</p>
      <div id="card-upload-div" class="max-w-sm">
        <label
          class="hidden mb-2 text-sm font-medium text-gray-700"
          for="card-input"
        >
          Upload card image
        </label>
        <input
          onclick=""
          accept="image/*"
          class="block w-full text-sm text-gray-700 border border-gray-300 rounded-lg cursor-pointer bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          id="card-input"
          type="file"
        />
      </div>

      <div id="card-img-div" class="size-32 mt-4 hidden relative">
        <div class="absolute top-2 right-2" id="remove-card-img">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="24"
            height="24"
          >
            <circle cx="12" cy="12" r="12" fill="red" />
            <path
              d="M16 8 L8 16 M8 8 L16 16"
              stroke="white"
              stroke-width="2"
              stroke-linecap="round"
            />
          </svg>
        </div>
        <img class="w-full h-full rounded-2xl" id="card-img-preview" />
      </div>
    </li>
    <li>
      <p class="mb-4">Upload product images</p>
    </li>
  </ul>
</form>

<!-- crop modal -->
<!-- Crop Image Modal Toggle Button -->
<button
  data-modal-target="crop-modal"
  data-modal-toggle="crop-modal"
  class="block hidden text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
  type="button"
>
  Upload & Crop Image
</button>

<!-- Crop Image Modal -->
<div
  id="crop-modal"
  class="fixed hidden inset-0 z-50 flex items-center justify-center w-full h-full bg-black/50"
>
  <div class="bg-white rounded-lg shadow-lg max-w-xl w-full p-6">
    <!-- Modal header -->
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-gray-900">Crop Image</h2>
      <button
        type="button"
        class="text-gray-400 hover:text-gray-900"
        data-modal-hide="crop-modal"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>
    </div>

    <!-- Modal Body with Image -->
    <div class="mb-4">
      <img
        id="crop-img-preview"
        class="max-w-full h-[600px] rounded border border-gray-300"
        alt="Preview"
      />
    </div>

    <!-- Modal Footer Buttons -->
    <div class="flex justify-end space-x-2">
      <button
        id="crop-confirm-btn"
        type="button"
        class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
      >
        Crop & Save
      </button>
      <button
        data-modal-hide="crop-modal"
        type="button"
        class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300"
      >
        Cancel
      </button>
    </div>
  </div>
</div>

<script type="module" src="/javascript/ajax/pages/addProduct.js"></script>
