<div class="container mx-auto mt-8">
  <!-- Header Section -->
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Category Offers</h2>
    <a href="/admin/offers/category/create" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">
      + Create New Offer
    </a>
  </div>

  <!-- Table Section -->
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Category Name</th>
          <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Discount (%)</th>
          <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Start Date</th>
          <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">End Date</th>
          <th class="px-6 py-3 text-center text-sm font-medium text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (categoryOffers.length > 0) { %>
          <% categoryOffers.forEach((offer) => { %>
            <tr class="border-t border-gray-200 hover:bg-gray-50">
              <td class="px-6 py-4 text-sm text-gray-800"><%= offer.categoryId?.name || 'N/A' %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= offer.discountPercentage %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= new Date(offer.startDate).toLocaleDateString() %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= new Date(offer.endDate).toLocaleDateString() %></td>
              <td class="px-6 py-4 text-center">
                <a href="/admin/offers/category/edit/<%= offer._id %>" class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 text-sm">
                  Edit
                </a>
                <form action="/admin/offers/category/delete/<%= offer._id %>" method="POST" class="inline-block">
                  <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 text-sm">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5" class="px-6 py-4 text-center text-gray-500">No category offers found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>