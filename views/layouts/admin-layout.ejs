<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/style/output.css">
    <!-- flowbite cdn started -->
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <!-- flowbite cdn ended -->
    <!-- alpine script started -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <!-- alpine script ended -->
    <!-- Cropper.js CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" />
    <!-- Cropper.js JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <!-- Include Toastify.js for Popups -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

    <!-- font awesome cdn -->
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</head>

<body
    x-data="adminLayout"
    :class="{'overflow-hidden': couponAdd.open}"
    class="flex h-screen bg-gray-50">
    <!-- Sidebar started -->
    <%- include("../admin/partials/organisms/sidebar.ejs", { adminSidebar }) %>
    <!-- sidebar ended -->


     <!-- modals -->
      <div x-show="couponAdd.open" class="absolute w-full bg-black/75 h-screen overflow-hidden flex  z-10">
          <%- include("../admin/partials/organisms/modals/couponCreateModal.ejs") %>
      </div>

      <div x-show="couponEdit.open" class="absolute w-full bg-black/75 h-screen overflow-hidden flex  z-10">
        <%- include("../admin/partials/organisms/modals/couponEditModal.ejs") %>
      </div>

        <!-- modals ended -->
        <!-- Main Content -->
        <div class="flex flex-1 flex-col">
            <!-- Navbar -->
            <header class="flex items-center justify-between bg-white px-6 py-4 shadow">
                <h1 class="text-xl font-semibold">Admin Dashboard</h1>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-700">Welcome, Admin</span>
                    <a class="rounded-lg bg-red-500 px-4 py-2 text-white" href="/admin/auth/login">
                        Logout
                    </a>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex w-full h-full flex-col  overflow-auto py-4">
                <div id="content-area" class="p-4 w-full h-full">
                    <%- body %>
                </div>
            </main>
        </div>

        <!-- alpine script -->
        <script src="/javascript/alpine/admin/adminLayout.js"></script>
        

        <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>

        <!-- flowbite date picker -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/datepicker.min.js"></script>
        
        <!-- flowbite chart cdn -->
        <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.46.0/dist/apexcharts.min.js"></script>

         <!-- flowbite chart cdn ended -->
        <script type="module" src="/javascript/layout/adminLayout.js"></script>
</body>

</html>